generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  slug         String   @unique
  subCategories SubCategory[]
  createdAt    DateTime @default(now())
}

model SubCategory {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  
  @@index([categoryId])
}